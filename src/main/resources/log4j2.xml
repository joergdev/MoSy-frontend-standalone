<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">

	<Appenders>
		<!-- RollingFileAppender (Datei, Textformat) -->
		<RollingFile name="Protokoll" fileName="MoSyFrontend.log"
			filePattern="MoSyFrontend.log.%i">
			<PatternLayout pattern="%d %-4r [%t] %-5p %c %x - %m%n" />
			<Policies>
				<SizeBasedTriggeringPolicy size="3000KB" />
			</Policies>
			<DefaultRolloverStrategy max="20" />
		</RollingFile>

		<!-- ConsoleAppender als JSON -->
		<Console name="Console" target="SYSTEM_OUT">
			<JsonLayout compact="true" eventEol="true"
				stacktraceAsString="true" complete="false" />
		</Console>
	</Appenders>

	<Loggers>
		<Logger name="de.joergdev.mosy"
			level="${sys:log4j2.mosy.level:-INFO}" additivity="false">
			<AppenderRef ref="Protokoll" />
			<AppenderRef ref="Console" />
		</Logger>

		<Root level="${sys:log4j2.root.level:-INFO}">
			<AppenderRef ref="Protokoll" />
			<AppenderRef ref="Console" />
		</Root>
	</Loggers>
</Configuration>